@model WebMatriculaNew.Entities.Padre

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Nuevo</h1>

<h4>Padre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CedulaPadre" class="control-label"></label>
                <select asp-for="CedulaPadre" class ="form-control" asp-items="ViewBag.CedulaPadre"></select>
            </div>
            <div class="form-group">
                <label asp-for="Profesion" class="control-label"></label>
                <input asp-for="Profesion" class="form-control" />
                <span asp-validation-for="Profesion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Conyugue" class="control-label"></label>
                <input asp-for="Conyugue" class="form-control" />
                <span asp-validation-for="Conyugue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonoConyugue" class="control-label"></label>
                <input asp-for="TelefonoConyugue" class="form-control" />
                <span asp-validation-for="TelefonoConyugue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CostoMensualidad" class="control-label"></label>
                <input asp-for="CostoMensualidad" class="form-control" />
                <span asp-validation-for="CostoMensualidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PagosRealizados" class="control-label"></label>
                <input asp-for="PagosRealizados" class="form-control" />
                <span asp-validation-for="PagosRealizados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
