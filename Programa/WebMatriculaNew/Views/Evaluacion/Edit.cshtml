@model WebMatriculaNew.Entities.Evaluacion

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Evaluacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger">Codigo de Evaluacion</div>
            <input type="hidden" asp-for="CodigoEvaluacion" />
            <div class="form-group">
                <label asp-for="Evaluacion1" class="control-label">Evaluacion</label>
                <input asp-for="Evaluacion1" class="form-control" />
                <span asp-validation-for="Evaluacion1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Porcentaje" class="control-label"></label>
                <input asp-for="Porcentaje" class="form-control" />
                <span asp-validation-for="Porcentaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curso" class="control-label"></label>
                <select asp-for="Curso" class="form-control" asp-items="ViewBag.Curso"></select>
                <span asp-validation-for="Curso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
