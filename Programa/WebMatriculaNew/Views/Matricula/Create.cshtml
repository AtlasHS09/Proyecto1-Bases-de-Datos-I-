@model WebMatriculaNew.Entities.Matricula

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Nueva</h1>

<h4>Matricula</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CedulaEstudiante" class="control-label"></label>
                <select asp-for="CedulaEstudiante" class="form-control" asp-items="ViewBag.CedulaEstudiante"></select>
                <span asp-validation-for="CedulaEstudiante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeriodoMatricular" class="control-label"></label>
                <input asp-for="PeriodoMatricular" class="form-control" />
                <span asp-validation-for="PeriodoMatricular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CobrosPendientes" class="control-label"></label>
                <input asp-for="CobrosPendientes" class="form-control" />
                <span asp-validation-for="CobrosPendientes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoMatricula" class="control-label"></label>
                <input asp-for="MontoMatricula" class="form-control" />
                <span asp-validation-for="MontoMatricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
