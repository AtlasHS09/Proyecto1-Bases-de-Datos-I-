@model WebMatriculaNew.Entities.EstudianteGrupo

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Nuevo</h1>

<h4>Grupo X Estudiante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CedulaEstudiante" class="control-label"></label>
                <select asp-for="CedulaEstudiante" class ="form-control" asp-items="ViewBag.CedulaEstudiante"></select>
            </div>
            <div class="form-group">
                <label asp-for="Grupo" class="control-label"></label>
                <select asp-for="Grupo" class ="form-control" asp-items="ViewBag.Grupo"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
