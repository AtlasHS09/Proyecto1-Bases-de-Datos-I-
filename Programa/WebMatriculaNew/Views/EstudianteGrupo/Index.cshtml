    <a asp-action="Create">Crear Nuevo</a>
</p>-->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CedulaEstudianteNavigation.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CedulaEstudianteNavigation.NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrupoNavigation.CodigoGrupo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CedulaEstudianteNavigation.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CedulaEstudianteNavigation.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrupoNavigation.CodigoGrupo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })

                <a asp-action="Edit" asp-route-CedulaEstudiante="@item.CedulaEstudiante" asp-route-CodigoGrupo="@item.Grupo">Editar</a> |
                <a asp-action="Details" asp-route-CedulaEstudiante="@item.CedulaEstudiante" asp-route-CodigoGrupo="@item.Grupo">Detalle</a> |
                <a asp-action="Delete" asp-route-CedulaEstudiante="@item.CedulaEstudiante" asp-route-CodigoGrupo="@item.Grupo">Borrar</a> |
            </td>
        </tr>
}
    </tbody>
</table>
