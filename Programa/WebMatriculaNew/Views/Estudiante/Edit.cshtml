@model WebMatriculaNew.Entities.Estudiante

@{ ViewData["Title"] = "Edit"; }

<h1>Editar</h1>

<h4>Estudiante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger">Cedula Estudiante</div>
            <input type="hidden" asp-for="CedulaEstudiante" />
            <div class="form-group">
                <label asp-for="GradosCursados" class="control-label">Grado</label>
                <input asp-for="GradosCursados" class="form-control" />
                <span asp-validation-for="GradosCursados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Periodo" class="control-label"></label>
                <input asp-for="Periodo" class="form-control" />
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CursoActual" class="control-label">Curso Actual</label>
                <select asp-for="CursoActual" class="form-control" asp-items="ViewBag.CursoActual"></select>
                <span asp-validation-for="CursoActual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoPeriodo" class="control-label">Estado Periodo</label>
                <input asp-for="EstadoPeriodo" class="form-control" />
                <span asp-validation-for="EstadoPeriodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CedulaPadre" class="control-label">Cedula del Padre</label>
                <select asp-for="CedulaPadre" class="form-control" asp-items="ViewBag.CedulaPadre"></select>
                <span asp-validation-for="CedulaPadre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
