@model IEnumerable<WebMatriculaApp.Entities.CobroFactura>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroMensualidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCobro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFactura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMatriculaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPadreNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroMensualidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCobro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFactura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMatriculaNavigation.IdMatricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPadreNavigation.Profesion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCobroFactura">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCobroFactura">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCobroFactura">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
