@model IEnumerable<WebMatriculaApp.Entities.Profesor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMateriaGradoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProfesorNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMateriaGradoNavigation.NombreMateria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProfesorNavigation.Cedula)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProfesor">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdProfesor">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProfesor">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
