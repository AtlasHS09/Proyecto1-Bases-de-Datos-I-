@model IEnumerable<WebMatricula.Entities.Factura>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula.CedulaEstudiante)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CedulaPadre">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CedulaPadre">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CedulaPadre">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
