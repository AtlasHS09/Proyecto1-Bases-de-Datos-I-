@model WebMatricula.Entities.Matricula

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Matricula</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CedulaEstudiante" />
            <input type="hidden" asp-for="PeriodoMatricular" />
            <input type="hidden" asp-for="Ano" />
            <div class="form-group">
                <label asp-for="CobrosPendientes" class="control-label"></label>
